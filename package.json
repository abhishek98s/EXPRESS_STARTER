{
  "name": "litmark_backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:dev": "npx kill-port 3000 5000 9000 && npx nodemon",
    "dev": "cross-env NODE_ENV=test node build/index.js",
    "build": "rimraf ./build && tsc",
    "start": "nodemon src/index.ts",
    "knex": "ts-node -r ./node_modules/dotenv/config ./node_modules/knex/bin/cli.js  --knexfile src/config/knexfile.ts",
    "migrate:make": "ts-node -r ./node_modules/dotenv/config ./node_modules/knex/bin/cli.js  --knexfile src/config/knexfile.ts migrate:make",
    "migrate:latest": "ts-node -r ./node_modules/dotenv/config ./node_modules/knex/bin/cli.js  --knexfile src/config/knexfile.ts migrate:latest",
    "migrate:rollback": "ts-node -r ./node_modules/dotenv/config ./node_modules/knex/bin/cli.js  --knexfile src/config/knexfile.ts migrate:rollback",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --verbose",
    "start:test": "cross-env NODE_ENV=test nodemon src/index.ts",
    "latest:test": "cross-env NODE_ENV=test npm run migrate:latest",
    "rollback:test": "cross-env NODE_ENV=test npm run migrate:rollback",
    "seed:test": "cross-env NODE_ENV=test npm run knex seed:run",
    "reset:test": "npm run rollback:test && npm run latest:test && npm run seed:test"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^2.2.0",
    "cloudinary": "^2.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "memory-storage": "^1.2.2",
    "multer": "^1.4.5-lts.2",
    "mysql2": "^3.14.1",
    "pg": "^8.15.6",
    "sharp": "^0.34.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-dist": "^5.21.0",
    "swagger-ui-express": "^5.0.1",
    "vercel": "^41.7.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/knex": "^0.15.2",
    "@types/multer": "^1.4.12",
    "@types/mysql": "^2.15.27",
    "@types/node": "^22.15.3",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-dist": "^3.30.5",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/validator": "^13.15.0",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
